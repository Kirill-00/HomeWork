                <Button Content="9" Margin="2,2,2,2" FontSize="35" Grid.Column="18" Grid.Row="0" Grid.ColumnSpan="2"/>
                <Button Content="0" Margin="2,2,2,2" FontSize="35" Grid.Column="20" Grid.Row="0" Grid.ColumnSpan="2"/>
                <Button Content="=" Margin="2,2,2,2" FontSize="35" Grid.Column="22" Grid.Row="0" Grid.ColumnSpan="2"/>
                <Button Content="-" Margin="2,2,2,2" FontSize="35" Grid.Column="24" Grid.Row="0" Grid.ColumnSpan="2"/>
                <Button Content="Backspace" Margin="2,2,2,2" FontSize="20" Grid.Column="26" Grid.Row="0" Grid.ColumnSpan="4"/>
                
