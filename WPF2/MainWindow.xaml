                <Button Content="v" Margin="2,2,2,2" FontSize="35" Grid.Column="11" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Content="b" Margin="2,2,2,2" FontSize="35" Grid.Column="13" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Content="n" Margin="2,2,2,2" FontSize="35" Grid.Column="15" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Content="m" Margin="2,2,2,2" FontSize="35" Grid.Column="17" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Content="," Margin="2,2,2,2" FontSize="35" Grid.Column="19" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Content="." Margin="2,2,2,2" FontSize="35" Grid.Column="21" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Content="/" Margin="2,2,2,2" FontSize="35" Grid.Column="23" Grid.Row="3" Grid.ColumnSpan="2"/>
                <Button Content="Shift" Margin="2,2,2,2" FontSize="20" Grid.Column="25" Grid.Row="3" Grid.ColumnSpan="5"/>
                
                <Button Content="Ctrl" Margin="2,2,2,2" FontSize="20" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3"/>
                <Button Content="Win" Margin="2,2,2,2" FontSize="20" Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="3"/>
                <Button Content="Alt" Margin="2,2,2,2" FontSize="20" Grid.Column="6" Grid.Row="4" Grid.ColumnSpan="3"/>
                <Button Content="Space" Margin="2,2,2,2" FontSize="20" Grid.Column="9" Grid.Row="4" Grid.ColumnSpan="12"/>
                <Button Content="Alt" Margin="2,2,2,2" FontSize="20" Grid.Column="21" Grid.Row="4" Grid.ColumnSpan="3"/>
                <Button Content="Win" Margin="2,2,2,2" FontSize="20" Grid.Column="24" Grid.Row="4" Grid.ColumnSpan="3"/>
                <Button Content="Ctr" Margin="2,2,2,2" FontSize="20" Grid.Column="27" Grid.Row="4" Grid.ColumnSpan="3"/>
